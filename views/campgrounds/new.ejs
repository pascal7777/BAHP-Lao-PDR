  </select>
  <div class="valid-feedback">Looks good!</div>
      </div>

<div class="mb-3">
  <label for="equipment1_endq">Delivery Scheduled (Quarter)</label>
  <select name="campground[equipment1_endq]" id="equipment1_endq">
    <option value="Q1">Q1</option> <option value="Q2">Q2</option>   <option value="Q3">Q3</option>  <option value="Q4">Q4</option> 
  </select>
  <div class="valid-feedback">Looks good!</div>
      </div>







<div class="mb-3">
        <label class="form-label" for="equipment2">Equipment Support (Follow-up)</label>
        <textarea
          class="form-control"
          type="text"
          id="equipment2"
          name="campground[equipment2]"
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>

<div class="mb-3">
