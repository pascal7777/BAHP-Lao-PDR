<div class="mb-3">
        <label class="form-label" for="safeguards">Safeguards</label>
        <textarea
          class="form-control"
          type="text"
          id="safeguards"
          name="campground[safeguards]"
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>

<div class="mb-3">
        <label class="form-label" for="gender">Gender Action</label>
        <textarea
          class="form-control"
          type="text"
          id="gender"
          name="campground[gender]"
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>


      <div class="mb-3">
        <div class="form-file custom-file">
          <input
            type="file"
            class="form-file-input"
            id="image"
            name="image"
            multiple
          />
          <label class="form-file-label" for="image">
            <span class="form-file-text custom-file-label"
              >Upload some pictures...</span
            >
            <span class="form-file-button">Browse</span>
          </label>
        </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add this Site</button>
      </div>
    </form>
    <a href="/campgrounds">Back to Project Sites list</a>
  </div>
</div>
