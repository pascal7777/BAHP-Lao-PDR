<input class="form-control" type="text" id="equipment2" name="campground[equipment2]"value="<%=campground.equipment2 %>"required/>
<div class="valid-feedback">Looks good!</div>
</div>

<div class="mb-3">
<label for="equipment2_starty">Procurement Start (Y)</label>
<select name="campground[equipment2_starty]" id="equipment2_starty">
<option value="2026">2026</option>   <option value="2027">2027</option>   <option value="2028">2028</option> 
