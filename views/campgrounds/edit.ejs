<option value="2024">2024</option> <option value="2025">2025</option>
</select>
<div class="valid-feedback">Looks good!</div>
</div>

<div class="mb-3">
<label for="equipment1_startq">Procurement Start (Q)</label>
<select name="campground[equipment1_startq]" id="equipment1_startq">
<option value="Q1">Q1</option> <option value="Q2">Q2</option>   <option value="Q3">Q3</option>  <option value="Q4">Q4</option> 
</select>
<div class="valid-feedback">Looks good!</div>
</div>

<div class="mb-3">
<label for="equipment1_endy">Scheduled Delivery (Y)</label>
<select name="campground[equipment1_endy]" id="equipment1_endy">
<option value="2024">2024</option> <option value="2025">2025</option>
</select>
<div class="valid-feedback">Looks good!</div>
</div>

<div class="mb-3">
<label for="equipment1_endq">Scheduled Delivery (Q)</label>
<select name="campground[equipment1_endq]" id="equipment1_endq">
<option value="Q1">Q1</option> <option value="Q2">Q2</option>   <option value="Q3">Q3</option>  <option value="Q4">Q4</option> 
