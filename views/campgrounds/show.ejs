<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/stars.css" />

<div class="row">
  
<div class="col-6">
  <h5 class="card-title"><%= campground.title%></h5>
    <div id="campgroundCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% campground.images.forEach((img, i) => { %>
        <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
          <img src="<%= img.cardImage%>" class="d-block w-100" alt="" />
        </div>
        <% }) %>
      </div>
      <% if(campground.images.length > 1) {%>
      <a
        class="carousel-control-prev"
        href="#campgroundCarousel"
        role="button"
        data-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a
        class="carousel-control-next"
        href="#campgroundCarousel"
        role="button"
        data-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
      <% } %>
   </div>
</div>

<div class="col-6">
<br>
   <div id="map"></div>
<br>
   
     Location: <%= campground.location%><br>
     <div style="line-height: 1em;"><span style="color:grey; font-size: 14px"><%= campground.connection%></span></div>
</div>
</div>

<div class="row">
<div class="card mb-3">
  <div class="card-body">
  <p class="card-text"><b>Current Situation:</b> <%= campground.situation%></p>
  </div>
</div>
</div>

<div class="row">
  <div class="col-6">   
   <ul class="list-group list-group-flush">
    <li class="list-group-item text-muted"><b>BHAP Scope of Work (Civil Works):</b> <%= campground.scope%> </li>
    <li class="list-group-item text-muted"><b>Works Details:</b> <%= campground.scope_detail%> </li>
    <li class="list-group-item text-muted">Works Start: <%= campground.scope_starty%> <%= campground.scope_startq%>     -      Works End: <%= campground.scope_endy%> <%= campground.scope_endq%></li>
   </ul> 
  </div>
 <div class="col-6"> 
  <ul class="list-group list-group-flush">
    <li class="list-group-item text-muted"><b>BHAP Equipment Support (Initial):</b> <%= campground.equipment1%> </li>
    <li class="list-group-item text-muted">Procurement Start (initial): <%= campground.equipment1_starty%> <%= campground.equipment1_startq%>     -      Scheduled Delivery (initial): <%= campground.equipment1_endy%> <%= campground.equipment1_endq%></li>
    <li class="list-group-item text-muted"><b>BHAP Equipment Support (Follow up):</b> <%= campground.equipment2%> </li>
    <li class="list-group-item text-muted">Procurement Start (follow-up): <%= campground.equipment2_starty%> <%= campground.equipment2_startq%>     -      Scheduled Delivery (follow-up): <%= campground.equipment2_endy%> <%= campground.equipment2_endq%></li>
  </ul> 
 </div>   
 </div>

<div class="row">

<div class="col-6">
 <ul class="list-group list-group-flush">
   <li class="list-group-item text-muted"><b>BHAP Safeguards:</b> <%= campground.safeguards%> </li>
 </ul>
</div> 
<div class="col-6">
 <ul class="list-group list-group-flush">
   <li class="list-group-item text-muted"><b>BHAP Gender Action:</b> <%= campground.gender%> </li>
 </ul>
</div> 


  <% if( currentUser && campground.author.equals(currentUser._id)) {%>
  <div class="card-body">
        <a class="card-link btn btn-info" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
        <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
        <button class="btn btn-danger">Delete</button>
        </form>
  </div>
      <% } %>


</div>

 <% if(currentUser){ %>
     <br>
     <form action="/campgrounds/<%=campground._id%>/reviews" method="POST" class="mb-3 validated-form" novalidate>
          <div class="mb-3">Enter Comment (ຂໍ້ຄວາມສະແດງຄວາມຄິດເຫັນ): </label> <textarea
               class="form-control" name="review[body]" id="body"   cols="30" rows="3" required ></textarea>
               <div class="valid-feedback">Looks good!</div>
          </div>
      <button class="btn btn-success">Submit</button>
      </form>
  
      <% } else { %>
      <br><a href="/login?returnTo=/campgrounds/<%= campground._id%>" class="btn btn-sm btn-primary">Leave a Message</a>
      <%}%>
  
      <br><br>
    
      %> <% for(let review of campground.reviews) { %>
      <div class="card mb-3">
      <div class="card-body">
        <h6 class="card-title">From: <%= review.author.username%> - <%=review.createdAt.toDateString()%> (<%= moment(review.createdAt).fromNow() %>)</h6>
        <p class="starability-result" data-rating="<%=review.rating%>">
          Rated: <%= review.rating %> stars
        </p>
        <!-- <h6 class="card-subtitle mb-2 text-muted">By <%= review.author.username%></h6> -->
        <p class="card-text">Message: <%= review.body %></p>
        <% if( currentUser && review.author.equals(currentUser._id)) {%>
        <form
          action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %>
      </div>
      </div>
      <% } %>


  <div class="card-footer text-muted">
      Created by <%= campground.author.username%> on: <%=campground.createdAt.toDateString()%> (<%= moment(campground.createdAt).fromNow() %>)
  </div>
</div>
</div>


<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const campground = <%- JSON.stringify(campground) %>
</script>

<script src="/javascripts/showPageMap.js"></script>
